@{
	string? Token = ViewData["Token"] != null ? (string?)ViewData["Token"] : "";
	Console.WriteLine("ADAD" + Token);
}

<div class="d-flex justify-content-center align-items-center text-center h-100"
	 style="height: 100vh !important;
			position: absolute;
			top: 0;
			right: 0;
			left: 0;
			bottom: 0;
			margin: 0;
			padding: 0;
			width: 100vw;">
	@if (!String.IsNullOrEmpty(Token))
	{
		<button class="btn btn-primary" onclick="window.location.href='/VerifyEmail/Verify?VerificationToken=@Uri.EscapeDataString(@Token)'"> Verify Email</button>
	}
	else
	{
		@Html.Raw("Error Invalid Token")
		;
	}
</div>
@{
	string? Email = (string?)ViewData["Email"];
	string? Token = (string?)ViewData["Token"];
}


<div class="modal fade" id="ResetPassword" tabindex="-1" aria-labelledby="ResetPasswordLabel" aria-hidden="true" style="display: block; opacity: 1">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="ResetPasswordLabel">Reset Password</h1>
			</div>
			<div class="modal-body">
				<form asp-controller="ResetPassword" asp-action="ResetPasswordPost" enctype="multipart/form-data" method="post" id="form">
					<div class="mb-3" style="display: none">
						<label for="Email" class="form-label">Email</label>
						<input type="email" name="Email" id="Email" class="form-control" value="@Email" placeholder="Enter your Email" required>
					</div>
					<div class="mb-3" style="display: none">
						<label for="Token" class="form-label">Token</label>
						<input type="text" name="Token" id="Token" class="form-control" value="@Token" placeholder="Enter your Email" required>
					</div>
					<div class="mb-3">
						<label for="Password" class="form-label">Password</label>
						<input pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[\W_]).{6,}$" type="Password" name="Password" id="Password" class="form-control" placeholder="Enter your Password.." required>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button form="form" type="submit" class="btn btn-primary">Next</button>
			</div>
		</div>
	</div>
</div>